<div class="d-flex justify-content-center mb-4">
  <div class="card mt-5" style="width: 35rem;">
    <div class="card-header text-center">
      <h3><%= yield :card_title %></h3>
    </div>
    <div class="card-body px-4">
      <%= form_with model: user do |form| %>
        <%= render 'shared/error_messages', obj: user %>

        <div class="form-group mt-3 d-flex justify-content-between align-content-center">
          <b><%= form.label :username %>:</b>
          <%= form.text_field :username, autofocus: true, class: "form-control p-2 w-75", placeholder: "Ryu" %>
        </div>
        
        <div class="form-group mt-3 d-flex justify-content-between">
          <b><%= form.label :email %>:</b>
          <%= form.email_field :email, class: "form-control p-2 w-75", placeholder: "ryu@example.com"  %>
        </div>

        <div class="form-group mt-3 d-flex justify-content-between">
          <b><%= form.label "Day of birth" %>:</b>
          <%= form.date_field :birthday, class: "form-control p-2 w-75" %>
        </div>

        <div class="form-group mt-3 d-flex justify-content-between">
          <b><%= form.label :phone %>:</b>
          <%= form.text_field :phone, class: "form-control p-2 w-75", placeholder: "phone must have 9 digits" %>
        </div>

        <div class="form-group mt-3 d-flex justify-content-between">
          <b><%= form.label :password %>:</b>
          <%= form.password_field :password, class: "form-control p-2 w-75", placeholder: "password contains minimum 6 characters" %>
        </div>

        <div class="actions mt-4 mb-2">
          <%= form.submit "#{@user.new_record? ? "Sign Up" : "Update account"}", class: "btn btn-primary w-100 p-2" %>
        </div>
        <div class="text-center"><%= link_to "Cancel", root_path, class:"text-decoration-none text-primary"%></div>
      <% end %>
    </div>
  </div>
</div>



