<div class="d-flex justify-content-center mb-4">
  <div class="card mt-5" style="width: 35rem;">
    <div class="card-header text-center">
      <h3>Log In</h3>
    </div>
    <div class="card-body px-4">
      <%= form_with scope: :session, url: login_path do |form| %>
        <div class="form-group mt-3 d-flex justify-content-between">
          <b><%= form.label :email %>:</b>
          <%= form.email_field :email, class: "form-control p-2 w-75", placeholder: "Enter your email address"  %>
        </div>

        <div class="form-group mt-3 d-flex justify-content-between">
          <b><%= form.label :password %>:</b>
          <%= form.password_field :password, class: "form-control p-2 w-75", placeholder: "Enter your password" %>
        </div>

        <div class="actions mt-4 mb-2">
          <%= form.submit "Log in", class: "btn btn-primary w-100 p-2" %>
        </div>
        <div class="text-center">
          <span>Don't have an account? </span>
          <%= link_to "Register now", signup_path, class:"text-decoration-none text-primary"%>
        </div>
      <% end %>
    </div>
  </div>
</div>



